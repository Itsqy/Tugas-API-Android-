<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image_recipe"
            android:layout_width="250dp"
            android:layout_height="210dp"

            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_image_recipe"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"

                android:text="Title"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_tv_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_tv_title"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"

                android:text="1 jam 10 menit"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_tv_portion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_tv_times"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"

                android:text="5 porsi"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_tv_dificulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_tv_portion"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"

                android:text="Mudah"
                android:textSize="8sp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>